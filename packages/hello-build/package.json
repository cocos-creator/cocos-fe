    "exports": {
        ".": {
            "require": "./bin/core.cjs",
            "import": "./bin/core.mjs"
        }
    },
    "bin": {
        "hi-cocos": "bin/index.mjs"
    },
    "dependencies": {
        "@vitejs/plugin-vue": "^3.0.1",
        "chokidar": "^3.5.3",
        "commander": "^9.4.0",
        "fs-extra": "^10.1.0",
        "less": "^4.1.3",
        "vite": "^3.0.4",
        "vue": "^3.2.37",
        "vue-template-compiler": "^2.7.8",
        "webpack-merge": "^5.8.0"
    },
    "publishConfig": {
        "access": "public",
        "registry": "https://registry.npmjs.org/"
    },
    "engines": {
        "node": "16"
    },
    "devDependencies": {
        "rollup": "^2.79.0",
        "rollup-plugin-delete": "^2.0.0",
        "rollup-plugin-node-externals": "^5.0.0",
        "rollup-plugin-preserve-shebangs": "^0.2.0"
    },
    "files": [
        "bin",
        "create-template",
