{
    "name": "@cocos-fe/hello-build",
    "version": "0.0.13",
    "description": "cocos editor 插件构建工具",
    "type": "module",
    "main": "bin/core.cjs",
    "module": "bin/core.mjs",
    "scripts": {
        "clear": "node ./scripts/clear.js",
        "dev": "npx rollup -c --watch",
        "build": "npx rollup -c"
