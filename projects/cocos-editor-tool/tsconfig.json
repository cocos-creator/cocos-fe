{
    "compilerOptions": {
        "target": "ESNext",
        "useDefineForClassFields": true,
        "module": "ESNext",
        "moduleResolution": "Node",
        "strict": true,
        "jsx": "preserve",
        "sourceMap": true,
        "resolveJsonModule": true,
        "isolatedModules": true,
        "esModuleInterop": true,
        "lib": [
            "ESNext",
            "DOM"
        ],
        "skipLibCheck": true
    },
    "include": [
        "source/**/*.ts",
        "source/**/*.d.ts",
        "source/**/*.tsx",
        "source/**/*.vue",
        "source/panel.js",
        "source/browser.js"
    ]
}